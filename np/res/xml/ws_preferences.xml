		android:summary="@string/ws_prefs_size_summary"
		android:entryValues="@array/ws_sizes_list_values"
		android:entries="@array/ws_sizes_list_labels" />
	<ListPreference android:key="@string/ws_prefs_category"
		android:title="@string/ws_category" android:defaultValue="@string/ws_RANDOM"

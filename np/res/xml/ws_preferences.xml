		android:entryValues="@array/ws_categories_list_values"
		android:entries="@array/ws_categories_list_labels" />
	<ListPreference android:key="@string/ws_prefs_touch_mode"
		android:title="@string/ws_input_type" android:defaultValue="@string/ws_DRAG"
